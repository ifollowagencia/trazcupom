
<section id="events" style="background:#dfdfdf;">
<div class="container" style="margin-top:-50px; color:#01334e;">
<!-- section header -->		
		<div class="header">
			<h2 style="color:#01334e;">Seus cupons</h2>
			<p style="color:#01334e;">Aqui você verifica os cupons baixados por você no Traz Cupom</p>
		</div>

	<div class="profile" style="color:#01334e; margin-top:-60px; padding:40px; background:#ccc; border:2px solid #888; height:100%;">
	<% if notice.blank? %>


	<% else %>
	<div id="notice" style="background:#01334e; width:80%; border:1px solid #ccc; height:40px; margin-left:40px; color:white; margin-bottom:20px;">
	 <p style="color:#fff; padding:10px;"><%= notice  %></p>
	 </div>
	 <% end %>

	 <% @cupons_baixados.each do |cupom| %>
	 <div class="ticket" style="width:100%; height:160px; background:#dfdfdf; border:1px solid #888; margin-bottom:20px; position:relative; padding:20px;">
	 	<div class="imageticket" style="padding:10px; float:left;">
	 		<%= image_tag cupom.offer.image1_url(:mega_thumb) %>
	 	</div>
	 	<div class="titleticket">
	 		<h1 style="color:#01334e;"><%= cupom.offer.name %></h1>
	 	</div>
	 	<div class="validateticket">
	 		<p>Valido até: <%= cupom.offer.validity.strftime("%b, %m %Y") %></p>
	 	</div>
	 	<div class="cod_cupom" style=" width:250px; margin-left:120px; margin-top:-20px;">
	 		<p>Seu cupom: <%= cupom.code %></p>
	 	</div>
	 	<div class="print" style="">
	 		<%= link_to 'Imprimir', :controller => 'user', :action => 'print', :idoffer => cupom.offer.id %>
	 	</div>
	 </div>
	 <% end %>
	 <center><%= will_paginate @cupons_baixados %></center>
	</div>

</div>

</section>

